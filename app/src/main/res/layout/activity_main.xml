<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_lizard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="Lizard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_tiger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="Tiger"
        app:layout_constraintStart_toEndOf="@+id/btn_lizard"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_tuna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="Tuna"
        app:layout_constraintStart_toEndOf="@+id/btn_tiger"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_chicken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="Chicken"
        app:layout_constraintStart_toEndOf="@+id/btn_tuna"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_snake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="16dp"
        android:text="Snake"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_lizard" />

    <Button
        android:id="@+id/btn_dog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="Dog"
        app:layout_constraintStart_toEndOf="@+id/btn_snake"
        app:layout_constraintTop_toBottomOf="@+id/btn_tuna" />

    <TextView
        android:id="@+id/tv_animal_sound"
        android:layout_width="385dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_dog" />

    <Button
        android:id="@+id/btn_mammal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="mammal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_animal_sound" />

    <Button
        android:id="@+id/btn_reptile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:text="reptile"
        app:layout_constraintStart_toEndOf="@+id/btn_mammal"
        app:layout_constraintTop_toBottomOf="@+id/tv_animal_sound" />

    <Button
        android:id="@+id/btn_bird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="23dp"
        android:text="bird"
        app:layout_constraintStart_toEndOf="@+id/btn_reptile"
        app:layout_constraintTop_toBottomOf="@+id/tv_animal_sound" />

    <Button
        android:id="@+id/btn_fish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:text="fish"
        app:layout_constraintStart_toEndOf="@+id/btn_bird"
        app:layout_constraintTop_toBottomOf="@+id/tv_animal_sound" />

    <TextView
        android:id="@+id/tv_species"
        android:layout_width="384dp"
        android:layout_height="66dp"
        android:layout_marginTop="24dp"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_reptile" />

</androidx.constraintlayout.widget.ConstraintLayout>